{
  "manifest_version": 3,
  "name": "laf助手",
  "version": "1.0.3",
  "description": "通过chatGPT写laf云函数",
  "action": {
    "default_icon": "logo.png",
    "default_title": "laf助手",
    "default_popup": "options.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "storage", "scripting"],
  "options_ui": {
    "page": "options.html"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },  
  "commands": {
    "addString": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      },
      "description": "通过chatGPT写laf云函数"
    }
  }
}
